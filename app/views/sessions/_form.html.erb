<div class="login-form">
  <!-- ERRORS -->
  <%= form_tag(login_path, remote: true, :authenticity_token => true) do %>
    <p>
      <%= label_tag :username %><br>
      <%= text_field_tag :username %>
    </p>
    <p>
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
    </p>
    <p>
      <%= submit_tag "Login" %>
    </p>
  <% end %>
</div>
