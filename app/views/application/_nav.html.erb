<nav class="nav">
  <% if current_user %>
    <%= link_to "What's up, #{current_user.username.capitalize}?", user_path(current_user) %>
    <button id="logout-button"><%= link_to 'Logout', logout_path %></button>
    <div class="login-message"></div>
  <% else %>
    <button id="login-button"><%= link_to 'Login', login_path, remote: true %></button>
    <button id="register-button"><%= link_to 'Sign Up', new_user_path %></button>
  <% end %>
</nav>
